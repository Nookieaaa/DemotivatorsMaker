<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    android:padding="@dimen/card_padding">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:id="@+id/constraintLayout4">

        <ImageView
            android:layout_width="207dp"
            android:layout_height="200dp"
            android:id="@+id/card_image"
            android:src="@android:drawable/sym_def_app_icon"
            android:clickable="false"
            android:padding="@dimen/iv_padding"
            android:scaleType="centerInside"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout4"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout4"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout4"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout4"
            android:layout_marginBottom="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_checkbox"
            android:checked="false"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout4"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout4"
            tools:layout_constraintTop_creator="1"/>

        <ImageButton
            android:layout_width="72dp"
            android:layout_height="67dp"
            android:id="@+id/card_ibtn_delete"
            android:src="@android:drawable/ic_menu_delete"
            android:padding="@dimen/iv_padding"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout4"
            android:layout_marginLeft="333dp"
            android:layout_marginStart="333dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintTop_toTopOf="@+id/card_image"
            app:layout_constraintRight_toRightOf="@+id/card_image"
            app:layout_constraintBottom_toBottomOf="@+id/card_image"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>

        <ImageButton
            android:layout_width="79dp"
            android:layout_height="67dp"
            android:id="@+id/card_ibtn_share"
            android:src="@android:drawable/ic_menu_share"
            android:padding="@dimen/iv_padding"
            tools:layout_editor_absoluteX="198dp"
            tools:layout_editor_absoluteY="149dp"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>