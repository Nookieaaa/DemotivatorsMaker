<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:id="@+id/constraintLayout4"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:id="@+id/card_image"
        android:src="@android:drawable/sym_def_app_icon"
        android:clickable="false"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout4"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout4"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout4"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/card_ibtn_delete" />
    <ImageButton
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:id="@+id/card_ibtn_delete"
        android:src="@android:drawable/ic_menu_delete"
        style="@android:style/Widget.Holo.Light.ImageButton"
        app:layout_constraintLeft_toLeftOf="@+id/card_image"
        app:layout_constraintRight_toRightOf="@+id/card_image"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout4"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:id="@+id/card_ibtn_share"
        android:src="@android:drawable/ic_menu_share"
        style="@android:style/Widget.Holo.Light.ImageButton"
        app:layout_constraintLeft_toLeftOf="@+id/card_image"
        app:layout_constraintTop_toTopOf="@+id/card_ibtn_delete"
        app:layout_constraintRight_toLeftOf="@+id/card_ibtn_delete"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/card_ibtn_delete"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>